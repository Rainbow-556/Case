<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_count_down_listview"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="listview倒计时"/>
        <Button
            android:id="@+id/btn_keyboard_event"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="键盘显示隐藏监听"/>
        <Button
            android:id="@+id/btn_banner"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="轮播图"/>
        <Button
            android:id="@+id/btn_auto_load"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="RecyclerView"/>
        <Button
            android:id="@+id/btn_p"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="权限"/>
        <Button
            android:id="@+id/btn_status_bar"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="沉浸式状态栏"/>
        <Button
            android:id="@+id/btn_ripple"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="水波纹效果"/>
        <Button
            android:id="@+id/btn_video"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="webview视频全屏播放"/>
        <Button
            android:id="@+id/btn_practice"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="Canvas等函数练习"/>
        <Button
            android:id="@+id/btn_gesture"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="go"
            android:text="手势锁"/>
    </LinearLayout>
</ScrollView>